{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strict": false,
  },
  "include": ["./generated"],
  "exclude": ["node_modules", "dist"],
}
          